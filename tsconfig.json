{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2024", "DOM"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": false,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "types": ["node"],
    "isolatedModules": true,
  },
  "ts-node": {
    "esm": true,
    "transpileOnly": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
