{
  "name": "vela-spectrum",
  "displayName": "Vela Spectrum",
  "description": "An inclusive, accessible theme for VS Code with support for dark, light, high contrast, and color vision variations (Protanopia, Deuteranopia, Tritanopia). Designed for clarity, beauty, and universal readability.",
  "type": "module",
  "version": "0.3.1",
  "publisher": "telianedward",
  "license": "MIT",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "dark",
    "light",
    "high contrast",
    "accessibility",
    "colorblind",
    "tritanopia",
    "protanopia",
    "deuteranopia",
    "inclusive",
    "accessible",
    "modern",
    "syntax highlighting",
    "developer experience"
  ],
  "icon": "VelaSpectrum.png",
  "galleryBanner": {
    "color": "#1a1a2e",
    "theme": "dark"
  },
  "preview": true,
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/Telianedward"
    }
  ],
  "homepage": "https://github.com/Telianedward/VelaSpectrum",
  "repository": {
    "type": "git",
    "url": "https://github.com/Telianedward/VelaSpectrum"
  },
  "bugs": {
    "url": "https://github.com/Telianedward/VelaSpectrum/issues"
  },
  "contributes": {
    "themes": [
      {
        "label": "Vela Spectrum Dark+",
        "uiTheme": "vs-dark",
        "path": "./themes/default-d.json"
      },
      {
        "label": "Vela Spectrum Colorblind",
        "uiTheme": "vs-dark",
        "path": "./themes/default-dc.json"
      },
      {
        "label": "Vela Spectrum Dimmed",
        "uiTheme": "vs-dark",
        "path": "./themes/default-dd.json"
      },
      {
        "label": "Vela Spectrum High Contrast",
        "uiTheme": "hc-black",
        "path": "./themes/default-dhc.json"
      },
      {
        "label": "Vela Spectrum Tritanopia",
        "uiTheme": "hc-black",
        "path": "./themes/default-dt.json"
      },
      {
        "label": "Vela Spectrum Light+",
        "uiTheme": "vs",
        "path": "./themes/default-l.json"
      },
      {
        "label": "Vela Spectrum Colorblind Light",
        "uiTheme": "vs",
        "path": "./themes/default-lc.json"
      },
      {
        "label": "Vela Spectrum Dimmed Light",
        "uiTheme": "vs",
        "path": "./themes/default-ld.json"
      },
      {
        "label": "Vela Spectrum High Contrast Light",
        "uiTheme": "hc-light",
        "path": "./themes/default-lhc.json"
      },
      {
        "label": "Vela Spectrum Tritanopia Light",
        "uiTheme": "hc-light",
        "path": "./themes/default-lt.json"
      }
    ]
  },
  "scripts": {
    "check-colors": "ts-node scripts/check-colors.ts",
    "build": "tsc && node dist/main.js",
    "dev": "npm run check-colors && node --loader ts-node/esm src/main.ts",
    "watch": "npm run check-colors && nodemon --watch src --exec \"node --loader ts-node/esm src/main.ts\"",
    "package": "npm run check-colors && node scripts/generate-package.js && npx @vscode/vsce package",
    "preview:colors": "http-server -c-1 -o -p 8080 ./src/colors --cors"
  },
  "devDependencies": {
    "@types/node": "^18.19.122",
    "esbuild": "^0.25.9",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "aiAssistant": {
    "support": true,
    "capabilities": [
      "theme-customization",
      "accessibility-guidance"
    ]
  }
}